#!/bin/sh
# postinst script for kgp-webserver
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

#
# Divert file, originally by azatoth in bubba-backend package
#
# Usage:
#
# divert package orig_file orig_file_diverted new_source_file service
#
# Where
#	package   		- package doing diversion, its files wont be diverted
#	orig_file 		- Which file should be diverted
#	orig_file_diverted	- Where to should file be diverted/saved
#	new_sourde_file		- Which file should be used as replacement
#	service			- service to restart after diversion or "false"
#
# Sideeffects, if function divert_cb_"service" function exists it will be called
# instead of service restart being performed
#
divert() {
	package=$1;
	file=$2;
	diverted=$3;
	source_file=$4;
	service=$5;
	if [ x$(dpkg-divert --truename $file) = x$file ]; then # we are not diverted at all
		dpkg-divert --add --package $package --rename --divert $diverted $file;
		if [ ! -e $file ]; then
			if [ "false" != "$source_file" ]; then
				ln -sf $source_file $file;
			fi
			if $(command -v "divert_cb_$service" >/dev/null); then 
				divert_cb_$service "$@";
			elif [ "$service" != "false" ]; then
				systemctl --quiet try-restart $service || true;
			fi
		fi
	fi

}


case "$1" in
	configure)
		divert kgp-mail /etc/postfix/main.cf /etc/postfix/main.cf-kgp-dist /etc/kinguard/conf/main.cf false
		divert kgp-mail /etc/postfix/master.cf /etc/postfix/master.cf-kgp-dist /etc/kinguard/conf/master.cf postfix

		divert kgp-mail /etc/default/fetchmail /etc/default/fetchmail.kgp-dist /etc/kinguard/conf/fetchmail.default false
		divert kgp-mail /etc/init.d/fetchmail /etc/init.d/fetchmail.kgp-dist /etc/kinguard/conf/fetchmail.init fetchmail

		# Fixups for fetchmail
		if ! [ -d /var/opi/fetchmail ]
		then
			 mkdir -p /var/opi/fetchmail
		fi

		chmod 700 /var/opi/fetchmail
		chown -h -R fetchmail:nogroup /var/opi/fetchmail
		usermod --home /var/opi/fetchmail fetchmail

		#Disable services that should not run by default
		for service in dovecot postfix
		do
			if systemctl --quiet is-enabled $service
			then
				systemctl disable $service
			fi
		done
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
