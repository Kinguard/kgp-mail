#!/bin/sh
# preinst script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install)
	    echo "About to install kgp-mail"
	    # Make sure we dont have any masked services blocking us
	    for service in postfix.service dovecot.service
	    do
		    echo "Check service $service"
		    if [ -L /etc/systemd/system/$service ]
		    then
			    echo "Unmask $service"
			    systemctl unmask $service
		    fi
	    done
    ;;

    upgrade|abort-upgrade)
	    echo "kgp-preinst called with $1"
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
